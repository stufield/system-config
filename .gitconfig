[user]
	name = Stu Field
	email = stu.g.field@gmail.com
[core]
	excludefile = /Users/sfield/.gitignore_global
	excludesfile = /Users/sfield/.gitignore_global
	editor = vim
[color]
	ui = true
[format]
	pretty = fuller
[merge]
	tool = vimdiff
	conflictstyle = merge
	# conflictstyle = diff3
[diff]
	renames = copies
	renamelimit = 0
	prompt = false
	tool = vimdiff
[alias]
	uncommit = reset --soft HEAD~1
  unstage = restore --staged 
	plog = log --graph --pretty=format:'%h -%d %s %n' --abbrev-commit --date=relative --branches
	taglog = log --pretty=oneline --decorate --tags --no-walk
	subupdate = submodule update --remote --merge
	subpush = push --recurse-submodules=on-demand
  author = config user.name \"Stu Field\"
  email = config user.email \"sfield@somalogic.com\"
[pager]
	diff = false
	log = false
	tag = false
	branch = false
[push]
	default = current
[uploadpack]
	allowFilter = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[commit]
	template = /Users/sfield/commit-msg-template
[init]
	defaultBranch = main
